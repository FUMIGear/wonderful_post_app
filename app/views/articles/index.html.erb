<p id="notice"><%= notice %></p>

<h1 style="color:blue;">ようこそ！Wonderful post appへ</h1>

<table>
  <thead>
    <tr>
      <th>表題：</th> <!--title-->
      <th>内容：</th><!--content-->
      <th colspan="3"></th> <!--colspanは横方向に結合-->
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= link_to '表示', article %></td><!--show-->
        <td><%= link_to '編集', edit_article_path(article) %></td><!--edit-->
        <td><%= link_to '削除', article, method: :delete, data: { confirm: '本当にホントに消していいんか？' } %></td> <!--destroy,フラッシュメッセージを変更-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

